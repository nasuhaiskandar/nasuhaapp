
<%if user_signed_in? %>
  <h1>Friends</h1>

  <table class="table table-dark table-hover table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        
        <th>Email</th>
        <th>Phone</th>
        <th>Instagram</th>
        <th>User ID</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td>
           <%=  link_to friend.frist_name+ ' '+ friend.last_name , friend, class:"btn btn-outline-light"%>
            
        
          
          </td>
          
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.instagram %></td>
          <td><%= friend.user_id %></td>

          <td><%= link_to 'Destroy', friend, method: :delete,class: "btn btn-danger btn-sm" , data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class: "btn btn-light" %>
<% else %>
<div class=" jumbotron">
  <h1 class="display-4">Hello, world!</h1>
  <p class="lead">im somehow stil alive.</p>
  <hr class="my-4">
  <p>This is my Emo App </p>
  <a class="btn btn-primary btn-lg" href="users/sign_in" role="button">Sign In</a>
</div>
<%end %>
